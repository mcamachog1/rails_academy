<p id="notice"><%= notice %></p>

<h1>Payment By Students</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_by_students.each do |payment_by_student| %>
      <tr>
        <td><%= payment_by_student.student_id %></td>
        <td><%= payment_by_student.payment_id %></td>
        <td><%= link_to 'Show', payment_by_student %></td>
        <td><%= link_to 'Edit', edit_payment_by_student_path(payment_by_student) %></td>
        <td><%= link_to 'Destroy', payment_by_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

