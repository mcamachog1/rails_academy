<p id="notice"><%= notice %></p>

<h1>Tutorings</h1>


<form>
	<div class="field">	  
	  <%= select_tag "student_id", options_from_collection_for_select(@students, "id", "name")%>
    <input type='submit' value='Enviar'>
  </div>

</form>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Tutor</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorings.each do |tutoring| %>
      <tr>
        <td><%= tutoring.date.strftime("%d/%m/%Y") %></td>
        <td><%= tutoring.start.strftime("%I:%M %p")  %></td>
        <td><%= tutoring.end.strftime("%I:%M %p")  %></td>
        <td><%= tutoring.tutor.name %></td>
        <td><%= tutoring.student.name %></td>
        <td><%= link_to 'Show', tutoring %></td>
        <td><%= link_to 'Edit', edit_tutoring_path(tutoring) %></td>
        <td><%= link_to 'Destroy', tutoring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Home', root_url %> |
<%= link_to 'New Tutoring', new_tutoring_path %> |
<%= link_to 'All Tutorings', tutorings_path %>


